    <body>
        <main class="mn-inner">
        <div class="row">
            
                <!-- <div class="page-title"><h4>Faculty Leave Management System</h4></div> -->

                
                    <div class="card white darken-1" style="margin-left: 20%;"  >

                        <div class="card-content ">
                            <span class="card-title" style="font-size:20px;"></span></span>

                            <div class="row">
                                <table class="table ">
                        <thead>
                            <tr>
                                <th scope="col">Faculty code</th>
                                <th scope="col">Leave type</th>
                                <th scope="col">Name</th>
                                <th scope="col">Department</th>
                                
                                <th scope="col">From </th>
                                <th scope="col">To </th>
                                <th scope="col">Number of days</th>
                                <th scope="col">Discription</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            <style>
                                tr:nth-child(even) {
                                    background-color: #f2f2f2;
                                }
                            </style>
                            

                            {{#each leaves}}
                            {{#if this.status2}}
                            <tr>
                                <th >{{this.id}}</th>
                                <td>{{this.leavetype}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.department}}</td>
                                
                                <td style="    font-size: 11px;  ">{{this.fromdate}}</td>
                                <td style="    font-size: 11px;  ">{{this.todate}}</td>
                                <td>{{this.nofdays}}</td>
                                <td style="    font-size: 11px;  ">{{this.description}}</td>

                                 
                                {{#if this.status4 }}
                                <td style="    font-size: 11px; color:blue; ">{{this.status}}<br>{{this.status2}}<br>{{this.status4}}<p style="color:rgb(255, 0, 0);">{{this.status5}}</p></td>
                                {{else if this.status5}}
                                <td style="    font-size: 11px; color: blue; ">{{this.status}}<br>{{this.status2}}<br><p style="color:rgb(255, 0, 0);">{{this.status5}}</p></td>
                               {{else }}
                               <td style="    font-size: 11px; color:blue; ">{{this.status}}<br>{{this.status2}}</td>
                               
                                <td>
                                    <a href="/admin/accept-hrLeave/{{this._id}}" class="btn btn-primary" style="font-size: 9px; padding: 0 1rem;" >Accept </a>
                                    <a href="/admin/reject-hrLeave/{{this._id}}" class="btn btn-primary" style="font-size: 9px; padding: 0 1rem; margin-top: 2px;">Reject </a>
                                </td>
                                {{/if}}

                                
                                
                            </tr>
                            {{/if}}
                            {{/each}}
                           
                        </tbody>
                    </table>


                            </div>



                        </div>
                    </div>
