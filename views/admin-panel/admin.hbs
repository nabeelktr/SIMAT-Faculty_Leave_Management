{{> loader}}
{{> admin-header}}
{{> admin-nav}}

<main class="mn-inner ">
    <div class="row">


        <div class="col s12 m12 l6">
            <div class="card white darken-1" style="margin-left: 20%;">

                <div class="card-content ">
                    <span class="card-title" style="font-size:20px;"></span>


                    <table class="display responsive-table ">
                        <thead style="color: rgb(110, 110, 110);">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Dob</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Department</th>
                                <th scope="col" style="width: 50px;"></th>
                                <th scope="col" style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody style="font-weight:500 ;   color: rgb(110, 110, 110);">
                            <style>
                                tr:nth-child(even) {
                                    background-color: #f2f2f2;
                                }
                            </style>
                            {{#each lists}}


                            <tr>
                                <th scope="row">{{this.id}}</th>
                                <td>{{this.name}}</td>
                                <td>{{this.dob}}</td>
                                <td>{{this.phone}}</td>
                                <td style="text-transform: uppercase;">{{this.department}}</td>

                               


                                    
                                <td><a href="/admin/edit-list/{{this._id}}" class="btn btn-primary"
                                        style="font-size: 9px; padding: 0 1rem; width: 60px;">Edit </a></td>
                                <td><a href="/admin/delete-list/{{this._id}}" , class="btn btn-danger"
                                        style="font-size: 9px; padding: 0 1rem; width: 60px; "
                                        onclick="return confirm('Are you sure want to delete: {{this.id}}')">Delete
                                    </a></td>


                            </tr>
                            {{/each}}
                        </tbody>
                    </table>






                </div>
            </div>
        </div>
    </div>
</main>