<body>
    <main class="mn-inner">
        <div class="row">

           

         <div class="col s12 m12 l6">
            <div class="card white darken-1" style="margin-left: 20%;">

                <div class="card-content ">



                    <table class="display responsive-table ">
                        <thead style="color: rgb(110, 110, 110);">
                            <tr>
                                <th scope="col">Faculty code</th>
                                <th scope="col">Leave type</th>
                                <th scope="col">Name</th>
                                <th scope="col">Department</th>

                                <th scope="col">From </th>
                                <th scope="col">To </th>
                                <th scope="col">No.of days</th>
                                <th scope="col">Discription</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>

                            </tr>
                        </thead>
                        <tbody   style="font-weight:500 ;   color: rgb(110, 110, 110);">
                            <style>
                                tr:nth-child(even) {
                                    background-color: #f2f2f2;
                                }
                            </style>
                            {{#each leaves}}
                            <tr>
                                <th style="color: rgb(110, 110, 110);">{{this.id}}</th>
                                <td>{{this.leavetype}}</td>
                                <td>{{this.name}}</td>
                                <td style="text-transform: uppercase;">{{this.department}}</td>

                                <td style="    font-size: 11px;  ">{{this.fromdate}}</td>
                                <td style="    font-size: 11px;  ">{{this.todate}}</td>
                                <td>{{this.nofdays}}</td>
                                <td style="    font-size: 11px;  ">{{description}}</td>
                             
                              {{#compare hodStatus true}}
                                <td style="    font-size: 11px; color:blue; ">HOD approved
                                    {{#compare princiStatus true}}<br>Principal approved{{else compare princiStatus false}}<br><span style="color: red;">Rejected by princi</span>{{/compare}}
                                    {{#compare hrStatus true}}<br>HR approved{{else compare hrStatus false}}<br><span style="color: red;">Rejected by HR</span>{{/compare}}</td>
                                
                             {{else compare hodStatus false}}
                                <td style="    font-size: 11px; color:rgb(255, 0, 0); ">Rejected by HOD </td>
                                {{/compare}}

                            
                               
                            {{#compare hodStatus undefined}}
                              <td style="color: orange;">Pending</td>
                                <td >
                                    <a  href="" style="text-decoration: wavy;"><i class="i " > i </i></a>
                                   
                                    
                                   {{!-- <a href="/admin/accept-leave/{{this._id}}" class="btn btn-primary"
                                        style="font-size: 9px; padding: 0 1rem;">Accept </a>
                                    <a href="/admin/reject-leave/{{this._id}}" class="btn btn-primary"
                                        style="font-size: 9px; padding: 0 1rem; margin-top: 2px;">Reject </a> --}}
                                </td>
                                {{/compare}}
                              
                              
                              
                              {{!--  {{#if this.status }}
                                <td style="    font-size: 11px; color:blue; ">{{this.status}}<br>
                                    <p style="color: red;">{{this.status3}}</p>{{this.status2}}<br>
                                    <p style="color: red;">{{this.status5}}</p>{{this.status4}}
                                </td>

                                {{else if this.status1}}
                                <td style="    font-size: 11px; color:red ">{{this.status1}}</td>


                                {{else}}
                                <td style="color: orange;">Pending</td>
                                <td>
                                    <a href="/admin/accept-leave/{{this._id}}" class="btn btn-primary"
                                        style="font-size: 9px; padding: 0 1rem;">Accept </a>
                                    <a href="/admin/reject-leave/{{this._id}}" class="btn btn-primary"
                                        style="font-size: 9px; padding: 0 1rem; margin-top: 2px;">Reject </a>
                                </td>
                                {{/if}} --}}
                                

                            </tr>
                            {{/each}}

                        </tbody>
                    </table>






                </div>
            </div>
        </div>
    </div>
    </main>
</body>
