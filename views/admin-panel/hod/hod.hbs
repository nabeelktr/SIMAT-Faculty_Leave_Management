{{> loader}}
{{> admin-header}}

{{> admin-nav}}
    <main class="mn-inner">
        <div class="row">
            <div class="col s12">
                <!-- <div class="page-title"><h4>Faculty Leave Management System</h4></div> -->

                <div class="col s12 m6 l8 offset-l2 offset-m3">
                    <div class="card white darken-1" style="margin-left: 20%;" >

                        <div class="card-content ">
                            <span class="card-title" style="font-size:20px;"></span></span>

                            <div class="row">
                                <table class="table" style="">
                                    <thead>
                                        <tr>
                                            <th scope="col">Id</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Dob</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">Department</th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                         <style>tr:nth-child(even) {background-color: #f2f2f2;}</style>
                                        {{#each hod}}
                                       
                                        
                                        <tr>
                                            <th scope="row">{{this.id}}</th>
                                            <td>{{this.name}}</td>
                                            <td>{{this.dob}}</td>
                                            <td>{{this.phone}}</td>
                                            <td>{{this.department}}</td>
                                            <td><a href="/admin/edit-hod/{{this._id}}" class="btn btn-primary" style="font-size: 9px; padding: 0 1rem;">Edit </a></td>
                                            <td><a href="/admin/delete-hod/{{this._id}}", class="btn btn-danger" style="font-size: 9px; padding: 0 1rem; " onclick="return confirm('Are you sure want to delete: {{this.id}}')">Delete </a></td>
                                            

                                        </tr>
                                        
                                            
                                       
                                        {{/each}}
                                        
                                        
                                                         
                                    </tbody>

                                </table>


                            </div>

                            <a href="/admin/addHod" class="btn btn-primary" style="font-size: 9px; padding: 0 1rem;">Add  </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</main>

</div>
