    <script>
        function myFunction22() {
            if (document.getElementById("selectval").value == "Casual Leave") {


                let x = document.forms["addemp"]["fromdate"].value;
                var date2 = new Date(x);
                var date = new Date;
                const diff = (Math.floor((date2 - date) / (1000 * 60 * 60 * 24)) + 1);
                nod = parseFloat(diff);





                if (nod <= -7) {
                    var overlay = document.createElement("div");
                    overlay.style.position = "fixed";
                    overlay.style.top = "0";
                    overlay.style.left = "0";
                    overlay.style.width = "100%";
                    overlay.style.height = "100%";
                    overlay.style.backgroundColor = "rgba(0, 0, 0, 0.5)"; // semi-transparent black overlay
                    document.body.appendChild(overlay);

                    var confirmMsg = "Oops! You cannot apply for leave for a past date that is more than 7 days old. Would you like to send a request to your Head of Department?";
                    var dialog = document.createElement("div");
                    var sendBtn = document.createElement("button");
                    sendBtn.innerHTML = "Yes";
                    sendBtn.classList.add("send-btn");
                    var noBtn = document.createElement("button");
                    noBtn.innerHTML = "No, cancel";
                    noBtn.classList.add("cancel-btn");
                    dialog.appendChild(document.createElement("br"));
                    dialog.appendChild(document.createTextNode(confirmMsg));
                    dialog.appendChild(document.createElement("br"));
                    dialog.appendChild(document.createElement("br"));
                    dialog.appendChild(sendBtn);
                    dialog.appendChild(noBtn);
                    dialog.style.position = "fixed";
                    dialog.style.zIndex = "9999";
                    dialog.style.top = "50%";
                    dialog.style.left = "50%";
                    dialog.style.transform = "translate(-50%, -50%)";
                    dialog.style.background = "white";
                    dialog.style.padding = "20px";
                    dialog.style.borderRadius = "10px";
                    dialog.style.boxShadow = "0px 0px 10px rgba(0, 0, 0, 0.25)";
                    document.body.appendChild(dialog);

                    sendBtn.addEventListener("click", function () {
                        // Send request to apply for leave
                        var form = document.getElementById("unlockRForm");

                        document.getElementById("example-form").style.display = "none";

                        form.style.display = "block";

                        document.body.removeChild(dialog);
                        document.body.removeChild(overlay);
                    });

                    noBtn.addEventListener("click", function () {
                        document.body.removeChild(dialog);
                        document.body.removeChild(overlay);
                    });
                    return false;
                }
                else if (nod >= 14) {



                    alert("Sorry, you cannot apply for leave for the coming Days after 2 weeks.");
                    return false;
                }

            }



        }

    </script>


