                                            <script>

                                                function adddate() {
                                                    dat1 = document.getElementById('sree').value;
                                                    dat2 = document.getElementById('sree2').value;
                                                    leave = document.getElementById('leaves').value;
                                                    userid = document.getElementById('userid').value





                                                    date1 = new Date(dat1)
                                                    date2 = new Date(dat2)
                                                    month = date2.getMonth() + 1;



                                                    const diffTime = Math.abs(date2 - date1);
                                                    const diffDays = (Math.floor((date2 - date1) / (1000 * 60 * 60 * 24)) + 1);
                                                    limit = parseFloat('12');
                                                    total = parseFloat(leave)
                                                    nod = parseFloat(diffDays);
                                                    totalLeave = total + nod;
                                                    var x = document.getElementById("sree3");

                                                    x.style.display = "block";

                                                    if (date2 == "Invalid Date") {
                                                        document.getElementById("sree3").value = "Please specify end date "
                                                        document.getElementById("days").style.display = "none"

                                                    } else if (date2 < date1) {
                                                        alert("negative days..");
                                                        document.getElementById('sree2').value = ""
                                                        document.getElementById('sree4').style.display = "none"
                                                        document.getElementById("days").style.display = "none"
                                                    }
                                                    else if (nod === 1 && totalLeave > limit) {

                                                        alert("Casual Leave limit ecxeeded , Total leave =" + total);
                                                        document.getElementById('sree2').value = ""
                                                        document.getElementById('sree4').style.display = "none"
                                                        document.getElementById("days").style.display = "none"
                                                    }
                                                    else if (nod > 1) {


                                                        if (nod === 2 && date1.getMonth() != date2.getMonth() && totalLeave <= limit) {


                                                            fetch('/monthcheck/' + userid + '/' + month).then((res) => {
                                                                if (res.status == 200) {

                                                                    document.getElementById("sree3").style.display = "none"
                                                                    document.getElementById("days").style.display = "contents"
                                                                    document.getElementById("sree4").value = diffDays;
                                                                    document.getElementById("sree4").style.display = "block"

                                                                }
                                                                else {
                                                                    alert("You already applied for a leave this month");
                                                                    document.getElementById('sree2').value = ""
                                                                    document.getElementById('sree').value = ""
                                                                    document.getElementById('sree4').style.display = "none"
                                                                    document.getElementById("days").style.display = "none"
                                                                }
                                                            })

                                                        }

                                                        else {

                                                            alert("You can apply only 1 leave per month");
                                                            document.getElementById('sree2').value = ""
                                                            document.getElementById('sree4').style.display = "none"
                                                            document.getElementById("days").style.display = "none"
                                                        }

                                                    }

                                                    else {
                                                        fetch('/monthcheck/' + userid + '/' + month).then((res) => {
                                                            if (res.status == 200) {

                                                                document.getElementById("sree3").style.display = "none"
                                                                document.getElementById("days").style.display = "contents"
                                                                document.getElementById("sree4").value = diffDays;
                                                                document.getElementById("sree4").style.display = "block"
                                                                document.getElementById("altdate").value = document.getElementById('sree').value;
                                                            }
                                                            else {
                                                                alert("You already applied for a leave this month");
                                                                document.getElementById('sree2').value = ""
                                                                document.getElementById('sree').value = ""
                                                                document.getElementById('sree4').style.display = "none"
                                                                document.getElementById("days").style.display = "none"
                                                            }
                                                        })

                                                    }
                                                }
